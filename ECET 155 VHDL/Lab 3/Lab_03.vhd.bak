library ieee;
use ieee.std_logic_1164.all;
use ieee.numeric_std.all;

entity Lab_03 is
Port (	
			R, D, clk: in std_logic ;
			Q: out std_logic);
			
end entity;

architecture DFF of Lab_03 is
		begin
				Process(D)
				begin
				If R = '0' then -- If the PushButton is pressed "Active Low" then make the output off
				Q <= ('0');
				Elsif rising_edge (clk) then  -- using the clocks rising_edge to have the output follow the input
				Q <= D;
		end if;
		end Process;
end DFF;